<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
  <h1 class="col-6 offset-3 text-center mb-4">Login</h1>

  <div class="col-6 offset-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>

      <!-- Local login button -->
      <button class="btn btn-success w-100 mb-2">Login</button>
    </form>

    <!-- Google login button -->
    <a href="/auth/google" class="btn btn-danger w-100">
      <i class="fab fa-google me-2"></i> Login with Google
    </a>
  </div>
</div>
