<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>ADD YOUR PLACE</h3>
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input
          name="listing[title]"
          placeholder="Add a catchy title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Good Title</div>
      </div>

      <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>
        <textarea
          name="listing[description]"
          placeholder="Enter description"
          type="text"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Give Description</div>
      </div>

      <div class="mb-3">
        <lable for="image" class="form-label">Upload Image</lable>
        <input name="listing[image]" type="file" class="form-control" />
        required
      </div>

      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select
          id="category"
          name="listing[category]"
          class="form-select"
          required
        >
          <option value="" disabled selected>Select category</option>
          <option value="Rooms">Rooms</option>
          <option value="Iconic cities">Iconic cities</option>
          <option value="Mountains">Mountains</option>
          <option value="Castles">Castles</option>
          <option value="Amazing pools">Amazing pools</option>
          <option value="Camping">Camping</option>
          <option value="Farms">Farms</option>
        </select>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-label">Price</lable>
          <input
            name="listing[price]"
            placeholder="1200"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter price</div>
        </div>

        <div class="mb-3 col-md-8">
          <lable for="country" class="form-label">Country</lable>
          <input
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter Country</div>
        </div>
      </div>

      <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>
        <input
          name="listing[location]"
          placeholder="Patna"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter Location</div>
      </div>
      <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
    <br /><br />
  </div>
</div>
