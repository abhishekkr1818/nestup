<% layout("/layouts/boilerplate") -%>

<style>
  /* Filters Layout */
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between; /* space filters & toggle */
    margin-bottom: 1rem;
    padding-bottom: 20px;
    border-bottom: none !important; /* ensure no line */
  }

  .filters-left {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }

  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 1rem;
    opacity: 0.7;
    text-decoration: none;
    color: black;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter.active {
    opacity: 1;
    font-weight: 700;
    color: black;
  }
  .filter p {
    font-size: 0.8rem;
    margin: 0.25rem 0 0;
  }

  .tax-toggle {
    margin-top: 1rem;
  }

  /* Dark mode filter colors */
  body.dark-mode .filter {
    color: #fff;
  }
  body.dark-mode .filter.active {
    color: #ff4757;
    font-weight: 700;
  }

  /* Listings Container */
  .listings-container {
    padding: 0 0.5rem;
    margin-top: 2rem; /* gap between search bar and listings */
  }

  /* Search Container */
  .search-container {
    position: relative;
    width: 100%;
    max-width: 600px;
    margin: 2rem auto; /* spacing above/below */
  }

  #searchForm {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    border: none !important;
    box-shadow: none !important;
    width: 100%;
  }

  .search-wrap {
    flex: 1;
  }

  /* Search Input */
  #searchInput {
    width: 100%;
    padding: 10px 15px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 25px;
    outline: none;
    transition: all 0.3s ease;
    box-shadow: none !important;
  }
  #searchInput:focus {
    border: 1px solid #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5) !important;
  }

  /* Search Button */
  #searchForm button {
    padding: 10px 18px;
    border-radius: 25px;
    border: none;
    background: #f20606;
    color: #fff;
    font-size: 16px;
    cursor: pointer;
    transition: 0.3s ease;
    flex-shrink: 0;
  }
  #searchForm button:hover {
    background: #0056b3;
  }
  @media (max-width: 480px) {
    #searchForm button {
      width: 100%;
    }
  }

  /* Suggestions Box Styling */
  #suggestionsBox {
    background: #fff;
    border-radius: 10px;
    box-shadow: 0px 4px 10px rgba(0,0,0,0.15);
    margin-top: 6px;
    overflow: hidden;
    border: 1px solid #e0e0e0;
    max-height: 250px;
    overflow-y: auto;
  }
  body.dark-mode #suggestionsBox {
    background: #1e1e1e;
    border: 1px solid #333;
  }

  .suggestion-item {
    display: block;
    padding: 12px 16px;
    border-bottom: 1px solid rgba(0,0,0,0.08);
    transition: background 0.2s;
    text-decoration: none;
    color: inherit;
  }
  body.dark-mode .suggestion-item {
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }
  .suggestion-item:hover {
    background: rgba(0,0,0,0.05);
  }
  body.dark-mode .suggestion-item:hover {
    background: rgba(255,255,255,0.1);
  }

  .suggestion-title {
    font-weight: 600;
    font-size: 1rem;
    color: #222;
  }
  body.dark-mode .suggestion-title {
    color: #fff;
  }

  .suggestion-subtitle {
    font-size: 0.9rem;
    color: #555;
  }
  body.dark-mode .suggestion-subtitle {
    color: #aaa;
  }

  .suggestion-owner {
    font-size: 0.85rem;
    color: #888;
  }
  body.dark-mode .suggestion-owner {
    color: #ccc;
  }
  #searchForm {
  border-bottom: none !important;
}

</style>


<div id="filters">
  <div class="filters-left">
    <!-- All (clear) -->
    <a class="filter <%= !selectedCategory ? 'active' : '' %>" href="/listings">
      <div><i class="fa-solid fa-layer-group"></i></div>
      <p>All</p>
    </a>

    <a class="filter <%= selectedCategory==='Rooms' ? 'active' : '' %>" href="/listings?category=Rooms">
      <div><i class="fa-solid fa-bed"></i></div><p>Rooms</p>
    </a>

    <a class="filter <%= selectedCategory==='Iconic cities' ? 'active' : '' %>" href="/listings?category=Iconic%20cities">
      <div><i class="fa-solid fa-mountain-city"></i></div><p>Iconic cities</p>
    </a>

    <a class="filter <%= selectedCategory==='Mountains' ? 'active' : '' %>" href="/listings?category=Mountains">
      <div><i class="fa-solid fa-mountain"></i></div><p>Mountains</p>
    </a>

    <a class="filter <%= selectedCategory==='Castles' ? 'active' : '' %>" href="/listings?category=Castles">
      <div><i class="fa-solid fa-chess-rook"></i></div><p>Castles</p>
    </a>

    <a class="filter <%= selectedCategory==='Amazing pools' ? 'active' : '' %>" href="/listings?category=Amazing%20pools">
      <div><i class="fa-solid fa-person-swimming"></i></div><p>Amazing pools</p>
    </a>

    <a class="filter <%= selectedCategory==='Camping' ? 'active' : '' %>" href="/listings?category=Camping">
      <div><i class="fa-solid fa-campground"></i></div><p>Camping</p>
    </a>

    <a class="filter <%= selectedCategory==='Farms' ? 'active' : '' %>" href="/listings?category=Farms">
      <div><i class="fa-solid fa-cow"></i></div><p>Farms</p>
    </a>
  </div>

  <div class="tax-toggle">
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>

<!-- Search form -->
<div class="search-container">
  <form id="searchForm" action="/listings" method="GET">
    <div class="search-wrap position-relative">
      <input
        id="searchInput"
        name="search"
        value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
        class="form-control"
        placeholder="Search listings..."
        autocomplete="off"
      />
      <div id="suggestionsBox" class="list-group position-absolute w-100" style="z-index: 1000;"></div>
    </div>

    <% if (selectedCategory) { %>
      <input type="hidden" name="category" value="<%= selectedCategory %>">
    <% } %>

    <button class="btn btn-primary" type="submit">Search</button>
  </form>
</div>


<!-- Cards -->
<div class="listings-container">
  <% if (listings.length === 0) { %>
    <div class="alert alert-warning text-center w-100 mt-3">
      ðŸš« No matches found 
      <% if (typeof searchQuery !== "undefined" && searchQuery) { %>
        for "<%= searchQuery %>"
      <% } %>
      <% if (selectedCategory) { %>
        in "<%= selectedCategory %>"
      <% } %>.
      Try another search!
    </div>
  <% } else { %>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
      <% for (let listing of listings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card col listing-card">
            <img
              src="<%= listing.image.url %>"
              class="card-img-top"
              alt="listing_image"
              style="height: 15rem"
            />
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b><br />
                â‚¹<span class="price" data-price="<%= listing.price %>">
                  <%= listing.price.toLocaleString("en-IN") %>
                </span> / night
                <i class="tax-info">&nbsp;(18% GST)</i><br />
              </p>
            </div>
          </div>
        </a>
      <% } %>
    </div>
  <% } %>
</div>


<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let prices = document.getElementsByClassName("price");
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let i = 0; i < prices.length; i++) {
      let originalPrice = parseFloat(prices[i].getAttribute("data-price"));
      if (taxSwitch.checked) {
        let newPrice = Math.round(originalPrice * 1.18);
        prices[i].innerText = newPrice.toLocaleString("en-IN");
        taxInfo[i].style.display = "inline";
      } else {
        prices[i].innerText = Math.round(originalPrice).toLocaleString("en-IN");
        taxInfo[i].style.display = "none";
      }
    }
  });

  const searchInput = document.getElementById("searchInput");
  const suggestionsBox = document.getElementById("suggestionsBox");

  searchInput.addEventListener("input", async () => {
    const query = searchInput.value.trim();
    if (!query) {
      suggestionsBox.innerHTML = "";
      return;
    }

    const res = await fetch(`/listings/suggestions?q=${encodeURIComponent(query)}`);
    const data = await res.json();

    suggestionsBox.innerHTML = data.map(item => `
      <a href="/listings/${item.id}" class="suggestion-item">
        <div class="suggestion-title">${item.title}</div>
        <div class="suggestion-subtitle">${item.location || "No location"}</div>
      </a>
    `).join("");
  });

  document.getElementById("searchForm").addEventListener("submit", () => {
    suggestionsBox.innerHTML = "";
  });

  document.addEventListener("click", (e) => {
    if (!searchInput.contains(e.target) && !suggestionsBox.contains(e.target)) {
      suggestionsBox.innerHTML = "";
    }
  });
</script>
